<?xml version="1.0" encoding="utf-8"?>
<com.zry.shortcutdemo.recyclermore.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footerContainer"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.zry.shortcutdemo.recyclermore.MyProgressbar
        android:id="@+id/progressbar"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="4dp"
        android:indeterminateDrawable="@drawable/anim_load_more"
        style="@style/Widget.AppCompat.ProgressBar"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading"
        android:textColor="#b3b3b3"
        android:textSize="12sp"/>

</com.zry.shortcutdemo.recyclermore.MyLinearLayout>
